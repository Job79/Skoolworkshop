generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  password String
  role     String    @default("user")
  sessions Session[]
}

model Session {
  id      String   @id
  created DateTime
  expires DateTime
  ipaddr  String
  userId  Int
  user    User     @relation(fields: [userId], references: [id])
}

model Workshop {
  id           Int    @id @default(autoincrement())
  name         String @unique
  groupSize    Int
  timesPerWeek Int
}

model Product {
  id       Int     @id @default(autoincrement())
  name     String  @unique
  stock    Int
  code     String? @unique
  reusable Boolean
}
