generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Workshop {
  id        Int    @id @default(autoincrement())
  name      String @unique
  groupSize Int
}

model Product {
  id       Int    @id @default(autoincrement())
  name     String @unique
  stock    Int
  minStock Int
}
