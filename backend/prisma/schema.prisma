generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Workshop {
  id        Int    @id @default(autoincrement())
  name      String @unique
  groupSize Int

  items WorkshopProduct[]
}

model Product {
  id       Int    @id @default(autoincrement())
  name     String @unique
  stock    Int
  minStock Int

  workshops WorkshopProduct[]
}

model WorkshopProduct {
  workshopId Int
  productId  Int
  workshop   Workshop @relation(references: [id], fields: [workshopId])
  product    Product  @relation(references: [id], fields: [productId])

  quantity Int

  @@id([workshopId, productId])
}
